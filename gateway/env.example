# =============================================================================
# 🚀 Gateway Service 환경변수
# =============================================================================

# 서비스 설정
SERVICE_NAME=gateway
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8080

# Railway 환경 설정
RAILWAY_ENVIRONMENT=false
PORT=8080

# =============================================================================
# 🔐 인증 서비스 설정
# =============================================================================

# 로컬 인증 서비스 사용 여부
USE_LOCAL_AUTH=true

# Railway 인증 서비스 URL (USE_LOCAL_AUTH=false일 때)
RAILWAY_AUTH_SERVICE_URL=

# JWT 시크릿 키
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# 🤖 LLM 서비스 설정
# =============================================================================

# LLM 서비스 URL
LLM_SERVICE_URL=http://llm-service:8002

# LLM 서비스 관리자 토큰
LLM_ADMIN_TOKEN=supersecret

# =============================================================================
# 📊 TCFD 서비스 설정
# =============================================================================

# Railway TCFD 서비스 사용 여부
USE_RAILWAY_TCFD=false

# Railway TCFD 서비스 URL (USE_RAILWAY_TCFD=true일 때)
RAILWAY_TCFD_SERVICE_URL=

# Railway TCFD Report 서비스 URL
RAILWAY_TCFDREPORT_SERVICE_URL=

# =============================================================================
# 💬 챗봇 서비스 설정
# =============================================================================

# 로컬 챗봇 서비스 사용 여부
USE_LOCAL_CHATBOT=true

# Railway 챗봇 서비스 URL (USE_LOCAL_CHATBT=false일 때)
RAILWAY_CHATBOT_SERVICE_URL=

# =============================================================================
# 🔧 개발 환경 설정
# =============================================================================

# 로그 레벨
LOG_LEVEL=INFO

# CORS 설정
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://www.taezero.com

# =============================================================================
# 📝 사용법
# =============================================================================

# 1. 이 파일을 .env로 복사
# cp env.example .env

# 2. 필요한 값들을 설정
# - JWT_SECRET_KEY: 고유한 시크릿 키로 변경
# - LLM_ADMIN_TOKEN: LLM 서비스와 동일한 값으로 설정
# - 서비스 URL들: 실제 배포 환경에 맞게 설정

# 3. Railway 배포 시 Railway Variables에 설정
