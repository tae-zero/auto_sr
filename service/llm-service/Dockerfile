FROM python:3.11-slim

# ì‘ì—… ë””ë ‰í† ë¦¬ ì„¤ì •
WORKDIR /app

# ì‹œìŠ¤í…œ íŒ¨í‚¤ì§€ ì—…ë°ì´íŠ¸ ë° í•„ìš”í•œ íŒ¨í‚¤ì§€ ì„¤ì¹˜
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Python ì˜ì¡´ì„± íŒŒì¼ ë³µì‚¬
COPY requirements.txt .

# Python ì˜ì¡´ì„± ì„¤ì¹˜
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# ì• í”Œë¦¬ì¼€ì´ì…˜ ì½”ë“œ ë³µì‚¬
COPY . .

# ìŠ¤í¬ë¦½íŠ¸ ì‹¤í–‰ ê¶Œí•œ ë¶€ì—¬
RUN chmod +x railway-start.sh

# vectordb í´ë”ë¥¼ ì„ì‹œ ë””ë ‰í† ë¦¬ë¡œ ë³µì‚¬ í›„ ì´ë™ (Railway ë°°í¬ìš©)
RUN echo "vectordb í´ë” ë³µì‚¬ ì¤‘..." && \
    ls -la && \
    if [ -d "vectordb" ]; then \
        echo "vectordb í´ë” ë°œê²¬ - ë³µì‚¬ ì‹œì‘" && \
        ls -la vectordb/ && \
        mkdir -p /tmp/vectordb_backup && \
        cp -r vectordb/* /tmp/vectordb_backup/ && \
        mkdir -p /app/vectordb/sr_corpus /app/vectordb/standards && \
        cp -r /tmp/vectordb_backup/* /app/vectordb/ && \
        rm -rf /tmp/vectordb_backup && \
        echo "ë³µì‚¬ ì™„ë£Œ" && \
        ls -la /app/vectordb/; \
    else \
        echo "vectordb í´ë”ê°€ ì—†ìŠµë‹ˆë‹¤ - ë¹ˆ ë””ë ‰í† ë¦¬ë¡œ ì‹œì‘" && \
        mkdir -p /app/vectordb/sr_corpus /app/vectordb/standards; \
    fi

# í¬íŠ¸ ì„¤ì • (Docker Composeì—ì„œ 8002:8000ìœ¼ë¡œ ë§¤í•‘)
EXPOSE 8000

# í™˜ê²½ë³€ìˆ˜ ì„¤ì •
