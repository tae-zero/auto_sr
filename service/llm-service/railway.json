{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "service/llm-service/Dockerfile"
  },
  "deploy": {
    "startCommand": "sh -c \"python -m uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-8005}\"",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
