# Gateway 설정
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000
GATEWAY_RELOAD=true

# 서비스 디스커버리 설정
SERVICE_DISCOVERY_TYPE=static
CONSUL_HOST=localhost
CONSUL_PORT=8500

# 로드 밸런서 설정
LOAD_BALANCER_TYPE=round_robin

# 타임아웃 설정
REQUEST_TIMEOUT=30
HEALTH_CHECK_INTERVAL=30

# 로깅 설정
LOG_LEVEL=INFO

# CORS 설정
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"] 